# ===============================================
#
#              i3-gaps 4.17.1 config
#
# ===============================================

# Mod Key
set $mod Mod4

# Font
font pango:UbuntuMono-regular 10


# ========== Basic Behavior ==========
# Setting the mod key
floating_modifier $mod

# Close window
bindsym $mod+q kill

# Restart and reload i3
bindsym $mod+Shift+c reload
bindsym $mod+Shift+r restart6

# Lock screen
bindsym $mod+shift+x exec betterlockscreen -l blur

# Exit i3
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit \
shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, \
exit i3' 'i3-msg exit'"

# Search for app. Customized to use dracula theme.
# Tested with dmenu 4.7
bindsym $mod+d exec "dmenu_run -nf '#F8F8F2' -nb '#282A36' -sb '#6272A4' -sf \
'#F8F8F2' -fn 'monospace-10' -p 'Search:'"


# ========== Media controls ==========
# Volume control
# Tested with amixer 1.1.3
bindsym XF86AudioRaiseVolume exec amixer -D pulse sset Master 5%+
bindsym XF86AudioLowerVolume exec amixer -D pulse sset Master 5%-
bindsym XF86AudioMute exec amixer -D pulse set Master 1+ toggle

# Brightness control
# Tested with light 1.2
bindsym XF86MonBrightnessUp exec light -A 10
bindsym XF86MonBrightnessDown exec light -U 10

# Screenshots manager
# Tested with scrot 0.8
bindsym --release Print exec scrot 'screenshot_%Y%m%d_%H%M%S.png' -e \
'mkdir -p ~/screenshots && mv $f ~/screenshots && xclip -selection clipboard -t \
image/png -i ~/screenshots/`ls -1 -t ~/screenshots | head -1`'

bindsym --release $mod+Print exec scrot -s 'screenshot_%Y%m%d_%H%M%S.png' \
-e 'mkdir -p ~/screenshots && mv $f ~/screenshots && xclip -selection clipboard -t \
image/png -i ~/screenshots/`ls -1 -t ~/screenshots | head -1`'


# ========== Window movement ==========
# Change focus between windows
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# Move window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# Orientation of workspace
bindsym $mod+g split h
bindsym $mod+v split v
bindsym $mod+f fullscreen toggle

# Different layouts
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# Floating mode
bindsym $mod+Shift+space floating toggle
bindsym $mod+space focus mode_toggle
bindsym $mod+a focus parent


# ========== Resize mode ==========
mode "resize" {
        bindsym h resize shrink width 10 px or 10 ppt
        bindsym j resize grow height 10 px or 10 ppt
        bindsym k resize shrink height 10 px or 10 ppt
        bindsym l resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}
bindsym $mod+r mode "resize"


# ========== Workspace configuration ==========
# Names of workspaces
set $w1 1
set $w2 2
set $w3 3
set $w4 4
set $w5 5
set $w6 6
set $w7 7
set $w8 8
set $w9 9
set $w10 10

# Keybinds for workspace
bindsym $mod+1 workspace number $w1
bindsym $mod+2 workspace number $w2
bindsym $mod+3 workspace number $w3
bindsym $mod+4 workspace number $w4
bindsym $mod+5 workspace number $w5
bindsym $mod+6 workspace number $w6
bindsym $mod+7 workspace number $w7
bindsym $mod+8 workspace number $w8
bindsym $mod+9 workspace number $w9
bindsym $mod+0 workspace number $w10

# Move windows to workpsace
bindsym $mod+Shift+1 move container to workspace $w1
bindsym $mod+Shift+2 move container to workspace $w2
bindsym $mod+Shift+3 move container to workspace $w3
bindsym $mod+Shift+4 move container to workspace $w4
bindsym $mod+Shift+5 move container to workspace $w5
bindsym $mod+Shift+6 move container to workspace $w6
bindsym $mod+Shift+7 move container to workspace $w7
bindsym $mod+Shift+8 move container to workspace $w8
bindsym $mod+Shift+9 move container to workspace $w9
bindsym $mod+Shift+0 move container to workspace $w10

# Apps default worskpace
# Browser
assign [class="Brave-browser"] $w1
assign [class="Google-chrome"] $w1

# Terminal and text editors
assign [class="Emacs"]       $w2
assign [class="Gedit"]       $w2
assign [class="st-256color"] $w2

# Viewers and media editors
assign [class="Evince"]              $w3
assign [class="Inkscape"]            $w3
assign [title="LibreOffice"]         $w3
assign [class="libreoffice-calc"]    $w3
assign [class="libreoffice-writer$"] $w3
assign [class="Soffice"]             $w3
assign [class="okular"]              $w3
assign [class="Zathura"]             $w3

# IDEs
assign [class="jetbrains-pycharm-ce"] $w4
assign [class="java-lang-Thread"]     $w4
assign [class="Java"]                 $w4
assign [class="Eclipse"]              $w4

# Social
assign [class="discord"]                   $w5
assign [class="Microsoft Teams - Preview"] $w5

# Media
assign [class="ffplay"]       $w6
assign [class="Popcorn-Time"] $w6
assign [class="Stremio"]      $w6
assign [class="vlc"]          $w6

# Configuration apps
assign [class="Arandr"]       $w7
assign [class="Pavucontrol"]  $w7
assign [class="Lxappearance"] $w7

# Production apps
assign [class="Audacity"] $w8
assign [class="kdenlive"] $w8
assign [class="Ntcardvt"] $w8

# Background apps
for_window [class="Spotify"] move to workspace $w10

# Floating apps
# Media
for_window [class="Eog"] floating enable
for_window [class="Inkscape" title="Preferences"] floating enable
for_window [class="Inkscape" title="Preferences"] [floating] resize set 1000 600 \
                                                  move position 512 960
for_window [class="mpv"] floating enable
for_window [class="Sxiv"] floating enable

# Misc
for_window [class="Matplotlib"] floating enable

for_window [class="Nautilus"] floating enable
for_window [class="Nautilus"] [floating] resize set 1000 600

for_window [title="Options Editor"] floating enable


# ========== Gaps configuration ==========
# Borders size
set $border 2

# Remove title bars and define border size
for_window [class="^.*"] border pixel $border

# Inner and outer gaps
set $gi 15
set $go 0

# Set gaps
gaps inner $gi
gaps outer $go

# Have borders when there is more than one app
smart_borders on

# Toggle gaps
bindsym $mod+shift+t gaps inner all set $gi, gaps outer all set $g0
bindsym $mod+t gaps inner all set 0, gaps outer all set 0


# ========== Application behavior ==========
# Keybinds
bindsym $mod+Return exec st
bindsym $mod+s exec spotify
bindsym $mod+i exec brave-browser

# Startup apps
exec brave-browser
exec st
exec emacs --daemon
exec xrdb /home/juanscr/.config/X11/Xresources

# Wifi Applet
exec_always nm-applet


# ========== Aesthetics ==========
# Background
exec --no-startup-id /home/juanscr/.bin/bg.sh

# Transparency
exec compton

# Bar: tested with Polybar 3.4.3
exec_always --no-startup-id $HOME/.config/polybar/launch-bar.sh
exec systemctl --user enable spotify-listener && systemctl --user start spotify-listener

# Dracula theme for containers
# class                 border  bground text    indicator child_border
client.focused          #6272A4 #6272A4 #F8F8F2 #6272A4   #6272A4
client.focused_inactive #44475A #44475A #F8F8F2 #44475A   #44475A
client.unfocused        #282A36 #282A36 #BFBFBF #282A36   #282A36
client.urgent           #44475A #FF5555 #F8F8F2 #FF5555   #FF5555
client.placeholder      #282A36 #282A36 #F8F8F2 #282A36   #282A36
client.background       #F8F8F2
