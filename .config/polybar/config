[colors]
; Transparent and not transparent background
background     = #B3282A36
background-alt = #282A36

; Workspaces setups
focused-ws   = #44475A
active-ws    = #282A36
urgent-ws    = #FF5555
underline-ws = #BBC5FF

; Font color
foreground     = #F8F8F2
foreground-alt = #BFBFBF

; Possible underline colors
red     = #FF5555
green   = #50FA7B
yellow  = #F1FA8C
blue    = #BD93D9
magenta = #FF79C6
cyan    = #8BE9FD

; Solution for floating bar based on
; https://bit.ly/2XyRCey
[sizes]
bar-width      = 100%
bar-height     = 30
bar-offset-x   = 0
bar-offset-y   = 0
bar-bottom-gap = 0

;;;;;;;;;;; MY MAIN BAR FOR I3 ;;;;;;;;;;;;
[bar/jscbar]
; Monitor
monitor = ${env:MONITOR:}

; Enable ipc modules
enable-ipc = true

; Position Setup
width        = ${sizes.bar-width}
height       = ${sizes.bar-height}
radius       = 0
fixed-center = true

; Color Setup
background = ${colors.background-alt}
foreground = ${colors.foreground}

; Height for underline
line-size = 3

; Spacing around the bar
;; MODIFY THE SIZES MODULE FOR A BETTER BEHAVIOR
border-color       = #00000000
border-right-size  = ${sizes.bar-offset-x}
border-left-size   = ${sizes.bar-offset-x}
border-top-size    = ${sizes.bar-offset-y}
border-bottom-size = ${sizes.bar-bottom-gap}

; Distance of first and last module to bar
padding-left  = 3
padding-right = 3

; Margin between modules
module-margin-left  = 3
module-margin-right = 2

; Fonts
font-0 = DejaVu Sans:size=10;1
font-1 = FontAwesome:pixelsize=13;1
font-2 = FontAwesome 5 Free:size=13;1

; Position of each module
modules-left   = i3
modules-center = spotify previous playpause next
modules-right  = cpu memory pulseaudio light battery date

; Position of the tray elements
tray-position = right
tray-padding  = 3

cursor-click  = pointer
cursor-scroll = ns-resize

[bar/monitor2]
; Monitor
monitor = ${env:MONITOR:}

; Enable ipc modules
enable-ipc = true

; Position Setup
width        = ${sizes.bar-width}
height       = ${sizes.bar-height}
radius       = 0
fixed-center = true

; Color Setup
background = ${colors.background-alt}
foreground = ${colors.foreground}

; Height for underline
line-size = 3

; Spacing around the bar
;; MODIFY THE SIZES MODULE FOR A BETTER BEHAVIOR
border-color       = #00000000
border-right-size  = ${sizes.bar-offset-x}
border-left-size   = ${sizes.bar-offset-x}
border-top-size    = ${sizes.bar-offset-y}
border-bottom-size = ${sizes.bar-bottom-gap}

; Distance of first and last module to bar
padding-left  = 3
padding-right = 3

; Margin between modules
module-margin-left  = 3
module-margin-right = 2

; Fonts
font-0 = DejaVu Sans:size=10;1
font-1 = FontAwesome:pixelsize=13;1
font-2 = FontAwesome 5 Free:size=13;1

; Position of each module
modules-left   = i3
modules-center = cpu memory
modules-right  =

cursor-click  = pointer
cursor-scroll = ns-resize

;;;;;;;;;;; MODULES ;;;;;;;;;;;;
; Title of focused window
[module/xwindow]
type = internal/xwindow
label = %title:0:30:...%

; Workspaces names and focus
[module/i3]
type   = internal/i3
format = <label-state> <label-mode>

; Sort workspaces by index
index-sort = true

; Scroll through workspaces settings
enable-scroll   = false
wrapping-scroll = false

; Write only the name of the workspace
strip-wsnumbers = true

; Symbols for workspaces
ws-icon-0 = 1;
ws-icon-1 = 2;
ws-icon-2 = 3;
ws-icon-3 = 4;
ws-icon-4 = 5;
ws-icon-5 = 6;
ws-icon-6 = 7;
ws-icon-7 = 8;
ws-icon-8 = 9;
ws-icon-9 = 10;
ws-icon-10 = 11;

label-mode-padding    = 2
label-mode-foreground = ${colors.foreground}
label-mode-background = ${colors.focused-ws}

; Settings for focused workspaces
label-focused            = %icon%
label-focused-background = ${colors.focused-ws}
label-focused-underline  = ${colors.underline-ws}
label-focused-padding    = 3

; Settings for unfocused workspaces
label-unfocused            = %icon%
label-unfocused-padding    = 3
label-unfocused-foreground = ${colors.foreground-alt}

; Active workspace in different monitor
label-visible            = %icon%
label-visible-background = ${self.label-focused-background}
label-visible-underline  = ${self.label-focused-underline}
label-visible-padding    = ${self.label-focused-padding}

; Urgent workspace
label-urgent            = %icon%
label-urgent-background = ${colors.urgent-ws}
label-urgent-padding    = 3


; Spotify custom module based on
; https://github.com/mihirlad55/polybar-spotify-module
[module/previous]
type        = custom/ipc
format-font = 3
hook-0      = echo ""
hook-1      = echo 
click-left  = "spotifyctl -q previous"


[module/next]
type        = custom/ipc
format-font = 3
hook-0      = echo ""
hook-1      = echo 
click-left  = "spotifyctl -q next"


[module/playpause]
type        = custom/ipc
format-font = 3
hook-0      = echo ""
hook-1      = echo 
hook-2      = echo 
click-left  = "spotifyctl playpause"


[module/spotify]
type               = custom/ipc
format-prefix      = "  "
format-prefix-font = 2
hook-0             = echo ""
hook-1             = spotifyctl -q status


; Custom module to monitor brightness
[module/light]
type = custom/script
; Settings
interval                 = 1
exec                     = light -G | awk '{printf "%.0f%\n", $1}'
format-prefix            = "  "
format-prefix-font       = 2
format-prefix-foreground = ${colors.foreground}


[module/date]
type = internal/date
; Settings
interval      = 5
format-prefix = "  "
time          = "%H:%M"
time-alt      = "%m-%d-%Y"
label         = %time%


; Cpu usage
[module/cpu]
type = internal/cpu
; Tick to update
interval = 2

; Formatting
format-prefix            = "CPU  "
format-prefix-font       = 1
format-prefix-foreground = ${colors.foreground-alt}
format                   = <ramp-coreload>

; Ramp settings
ramp-coreload-0            = ▁
ramp-coreload-0-foreground = ${colors.green}
ramp-coreload-1            = ▂
ramp-coreload-1-foreground = ${colors.green}
ramp-coreload-2            = ▃
ramp-coreload-2-foreground = ${colors.green}
ramp-coreload-3            = ▄
ramp-coreload-3-foreground = ${colors.green}
ramp-coreload-4            = ▅
ramp-coreload-4-foreground = ${colors.yellow}
ramp-coreload-5            = ▆
ramp-coreload-5-foreground = ${colors.yellow}
ramp-coreload-6            = ▇
ramp-coreload-6-foreground = ${colors.red}
ramp-coreload-7            = █
ramp-coreload-7-foreground = ${colors.red}

; Ram memory usage
[module/memory]
type = internal/memory
; Tick to update
interval = 2

; Formatting
format-prefix            = "RAM  "
format-prefix-font       = 1
format-prefix-foreground = ${colors.foreground-alt}
format                   = <ramp-used>

; Ramp settings
ramp-used-0            = ▁
ramp-used-0-foreground = ${colors.green}
ramp-used-1            = ▂
ramp-used-1-foreground = ${colors.green}
ramp-used-2            = ▃
ramp-used-2-foreground = ${colors.green}
ramp-used-3            = ▄
ramp-used-3-foreground = ${colors.green}
ramp-used-4            = ▅
ramp-used-4-foreground = ${colors.yellow}
ramp-used-5            = ▆
ramp-used-5-foreground = ${colors.yellow}
ramp-used-6            = ▇
ramp-used-6-foreground = ${colors.red}
ramp-used-7            = █
ramp-used-7-foreground = ${colors.red}

; Volume
[module/pulseaudio]
type = internal/pulseaudio

; Formats for muted and not muted
format-volume           = <ramp-volume>  <label-volume>
label-volume            = %percentage%%
label-volume-foreground = ${colors.foreground}
format-muted            = <label-muted>
label-muted             =   %percentage%%
label-muted-foreground  = ${colors.urgent-ws}

; Ramp volume
ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 

; Bar settings
bar-volume-width            = 15
bar-volume-foreground-0     = ${colors.yellow}
bar-volume-foreground-1     = ${colors.yellow}
bar-volume-foreground-2     = ${colors.green}
bar-volume-foreground-3     = ${colors.green}
bar-volume-foreground-4     = ${colors.green}
bar-volume-foreground-5     = ${colors.red}
bar-volume-foreground-6     = ${colors.red}
bar-volume-gradient         = false
bar-volume-indicator        = |
bar-volume-indicator-font   = 2
bar-volume-fill             = ─
bar-volume-fill-font        = 2
bar-volume-empty            = ─
bar-volume-empty-font       = 2
bar-volume-empty-foreground = ${colors.foreground}

; Battery module
[module/battery]
type = internal/battery
battery = BAT1
adapter = ACAD
full-at = 98

; Full label
label-full              = %percentage%%
format-full-prefix      = " "
format-full-prefix-font = 4

; Charging
label-charging  = ${self.label-full}
format-charging = <ramp-capacity>  <label-charging>

; Discharging
label-discharging  = ${self.label-full}
label-discharging-foreground = ${colors.yellow}
format-discharging = <ramp-capacity>  <label-discharging>

; Ramp symbols
ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 
